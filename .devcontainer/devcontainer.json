{
  "image": "ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/git:latest": {},
    "ghcr.io/devcontainers/features/git-lfs:latest": {},
    "ghcr.io/devcontainers/features/common-utils:latest": {
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/rust:latest": {
      "profile": "default"
    },
    "ghcr.io/lee-orr/rusty-dev-containers/cargo-expand:latest": {},
    "ghcr.io/lee-orr/rusty-dev-containers/cargo-watch:latest": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "github.vscode-github-actions",
        "PKief.material-icon-theme",
        "mutantdino.resourcemonitor",
        "yzhang.markdown-all-in-one",
        "mhutchie.git-graph",
        "vadimcn.vscode-lldb",
        "serayuzgur.crates",
        "rust-lang.rust-analyzer"
      ]
    }
  },
  "postCreateCommand": "rustup install nightly && rustup default nightly",
  "postStartCommand": "rustup update"
}
